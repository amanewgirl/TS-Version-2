<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:useDefaultMargins="false"
    tools:context="com.example.tsv1.HomeActivity"
    tools:ignore="MergeRootFrame">

    <Space android:layout_gravity="fill_vertical" />

    <Space
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_row="4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="4"
        android:background="#0381A8"
        android:onClick="openRNow" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="154dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="4"
        android:src="@drawable/recyclemap" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="0"
        android:background="#1D3165"
        android:onClick="openTtalk" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="4"
        android:background="#0B9966"
        android:onClick="openCanRe"
        android:textColorLink="@android:color/holo_blue_light" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="282dp"
        android:layout_height="155dp"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="4"
        android:src="@drawable/helpme" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:src="@drawable/community" />

</GridLayout>